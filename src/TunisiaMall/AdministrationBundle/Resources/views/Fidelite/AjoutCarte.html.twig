{% block emplacement %} <li class="active">Ajouter Carte Fidélité</li>{%endblock%}
{% block content%}
    <div class="page-content-wrap">                
                
                    <div class="row">
                        <div class="col-md-6">
                              <form action="" method="post">
                            <!-- START VALIDATIONENGINE PLUGIN -->
                            <div class="block">
                                <h4>Ajouter Carte Fidélité</h4>                                
                                <form id="validate" role="form" class="form-horizontal" action="javascript:alert('Form #validate submited');">                            
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Numéro de la carte:</label>
                                        <div class="col-md-9">
                                            {{form_widget(Form.num,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                                            <span class="help-block">Taille Max =8</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Validité:</label>
                                        <div class="col-md-9">
                                            {{form_widget(Form.validite,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                                        </div>
                                    </div>                    
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Nombre des point à attribuer:</label>
                                        <div class="col-md-9">
                                            {{form_widget(Form.nbrePoint,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                                        </div>
                                    </div>  
                                       
                                        
                                         <div class="form-group">
                                        <label class="col-md-3 control-label">ID Boutique:</label>
                                        <div class="col-md-9">
                                            {{form_widget(Form.idboutique,{'value' : app.user.boutique },{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                                        </div>
                                        <br>
                                        <br>
                                        <br>
                                        
                                        <br>
                                        {{form_widget(Form.Ajouter)}}
                                    </div>  
                                        
                                         
                                             
                                    </div>     
                                </form>                                   
                                </form>
                            </div>               
                        </div>
                    </div>
    </div>
    {% endblock %}