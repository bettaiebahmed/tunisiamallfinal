{% block navigation %} 
    
    <li>
        <a href="index.html"><span class="fa fa-desktop"></span> <span class="xn-text">Dashboard</span></a>                        
    </li>
    <li class="xn-openable">
        <a href="#"><span class="fa fa-files-o"></span> <span class="xn-text">Gestion de Stock</span></a>
        <ul>
            <li><a href="{{path('ajouter_produit')}}"><span class="fa fa-image"></span> Ajouter</a></li>
            <li class="active"><a href="{{path('_afficher_produit')}}"><span class="fa fa-user"></span> Consulter</a></li>
            <li><a href="{{path('_recherche_article')}}"><span class="fa fa-users"></span> Rechercher</a></li>

        </ul>
    </li>
    <li>
        <a href="index.html"><span class="fa fa-desktop"></span> <span class="xn-text">Publicité</span></a>                        
    </li>
    <li class="xn-openable">
        <a href="#"><span class="fa fa-file-text-o"></span> <span class="xn-text">Fidélisation</span></a>
        <ul>

            <li class="active"><a href="/TunisiaMallV2/web/app_dev.php/AjoutCarte">Ajouter une carte de fidélité</a></li>
            <li><a href="/TunisiaMallV2/web/app_dev.php/AttribuerPoint">Consulter/Attribuer des points</a></li>
        </ul>
    </li>
{% endblock %}
{% block emplacement %} <li class="active">Consulter Points</li>{%endblock%}
{% block content%}
     <div class="page-content-wrap">                
                
                    <div class="row">
                        <div class="col-md-6">
                              <form action="" method="post">
                                  <h4>Modification du carte N°:  {% for c in carteFid%} {{c.num}} {% endfor %}</h4>  
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Nombre des points:</label>
                                        <div class="col-md-9">
                                            {% for c in carteFid%}
    
    
                                            {{form_widget(Form.nbrePoint,{'value' : c.nbrePoint },{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                                         {% endfor %}
                                            <span class="help-block">Taille Max =8</span>
                                        </div>
                                    </div>
                                            <div class="btn-group pull-right">
                                             {{form_rest(Form)}}
                                    </div>  
                                     </form>                                   
                                </form>
                            </div>               
                        </div>
                    </div>
    </div>
{% endblock %}