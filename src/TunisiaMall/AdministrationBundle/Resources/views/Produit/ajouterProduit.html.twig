{% endblock %}
{% block emplacement %} <li class="active">Ajouter Un Produit</li>{%endblock%}
{% block content%}
  <div class="page-content-wrap">                

        <div class="row">
            <div class="col-md-6">
                <form action="" method="post" {{ form_enctype(Form) }}>
                    <!-- START VALIDATIONENGINE PLUGIN -->
                    <div class="block">
                        <h4>Ajouter Produit</h4>                                
                        <form id="validate" role="form" class="form-horizontal" action="javascript:alert('Form #validate submited');">                            
                      <label>Référence de l'article:</label>

                                {{form_widget(Form.ref,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                      
                            <label>Nom de l'article:</label>

                                {{form_widget(Form.nomProduit,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                            <br>

                                <label>Description:</label>

                                {{form_widget(Form.Description,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                                                                        <br>

                                <label>Type de produit:</label>

                                {{form_widget(Form.typeProduit,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                                                                        <br>
                              <label>Nom de catégorie:</label>

                                {{form_widget(Form.nom_categorie,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                                                                        <br>

                                <label>Id enseigne:</label>

                                {{form_widget(Form.idenseigne,{ 'value': app.user.id,'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                                         <br>

                                <label>Prix en détaille:</label>
                                {{form_widget(Form.prix,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                            <br>
                            <label>Quantité:</label>
                    {{form_widget(Form.quantiteStock,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                            <br>
                             <label>Prix en gros:</label>
                    {{form_widget(Form.prixGros,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                            <br>
                             <label>Prix d'achat:</label>
                    {{form_widget(Form.prixdetaille,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                            <br>
                    </div>
                    



                    <div class="btn-group pull-right">
                        {{form_rest(Form)}}
                    </div>     
                </form>                                   
                </form>
            </div>               
        </div>
    </div>
</div>
 {% endblock %}