{% endblock %}
{% block emplacement %} <li class="active">Consulter Points</li>{%endblock%}

{% block content %}
<div class="page-content-wrap">                

        <div class="row">
            <div class="col-md-6">
                <form action="" method="post" {{ form_enctype(Form) }}>
                    <!-- START VALIDATIONENGINE PLUGIN -->
                    <div class="block">
                                        {% for a in article%}

                        <h4>Modifier Produit N° : {{a.id}}</h4>                                
                        <form id="validate" role="form" class="form-horizontal" action="javascript:alert('Form #validate submited');">                            
                                <label>Nom de l'article:</label>

          {{form_widget(Form.nomProduit,{'value' : a.nomProduit },{'attr': {'class': 'validate[required,maxSize[8]] form-control'}} )}}
                            <br>

                                <label>Description:</label>

                                {{form_widget(Form.Description, {'value' : a.Description },{'attr': {'class': 'validate[required,maxSize[8]] form-control'}} )}}
                                                                        <br>

                                <label>Type de produit:</label>

                                {{form_widget(Form.typeProduit, {'value' : a.typeProduit },{'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                                                                        <br>

                                <label>Quantite :</label>

                                {{form_widget(Form.quantiteStock, {'value' : a.quantiteStock },{'attr': {'class': 'validate[required,maxSize[8]] form-control'}} )}}
                                         <br>

                                <label>Prix:</label>
                                {{form_widget(Form.prix, {'value' : a.prix },{'attr': {'class': 'validate[required,maxSize[8]] form-control'}} )}}
                            <br>
                            
                                        </div>
                    



                    <div class="btn-group pull-right">
                        {{form_rest(Form)}}
                    </div> 
                        {% endfor %}
                </form>                                   
                </form>
            </div>               
        </div>
    </div>
</div>
{% endblock %}
